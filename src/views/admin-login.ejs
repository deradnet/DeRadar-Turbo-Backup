  <script>
    function loginApp() {
      return {
        credentials: {
          username: '',
          password: ''
        },
        loading: false,
        errorMessage: '',
        successMessage: '',
        loginMethod: '', // 'wallet' or 'credentials'
        walletConnected: false,
        walletAddress: '',

        async init() {
          // Check if Wander wallet is installed and connected on page load
          await this.checkWalletConnection();
        },

        async checkWalletConnection() {
          if (!window.arweaveWallet) {
            return;
          }

          try {
            // Check if wallet is already connected
            const permissions = await window.arweaveWallet.getPermissions();
            if (permissions.includes('ACCESS_ADDRESS') && permissions.includes('SIGNATURE')) {
              this.walletConnected = true;
              this.walletAddress = await window.arweaveWallet.getActiveAddress();
              console.log('Wallet already connected:', this.walletAddress);
            }
          } catch (error) {
            // Wallet not connected, that's fine
            console.log('Wallet not yet connected');
          }
        },

        async login() {
          this.errorMessage = '';
          this.successMessage = '';
          this.loading = true;
          this.loginMethod = 'credentials';

          try {
            const response = await fetch('/auth/login', {
              method: 'POST',
              credentials: 'include',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(this.credentials)
            });

            if (response.ok) {
              window.location.href = '/admin';
            } else {
              const data = await response.json().catch(() => ({}));
              this.errorMessage = data.message || 'Invalid username or password. Please try again.';
            }
          } catch (error) {
            this.errorMessage = 'Connection error. Please check your network and try again.';
          } finally {
            this.loading = false;
            this.loginMethod = '';
          }
        },

        async connectWallet() {
          this.errorMessage = '';
          this.successMessage = '';
          this.loading = true;
          this.loginMethod = 'wallet';

          try {
            // Check if Wander wallet (arweaveWallet) is available
            if (!window.arweaveWallet) {
              this.errorMessage = 'Wander wallet not detected. Please install the Wander browser extension.';
              this.loading = false;
              this.loginMethod = '';
              return;
            }

            // Check if already connected, if not, request connection
            if (!this.walletConnected) {
              await window.arweaveWallet.connect(['SIGNATURE', 'ACCESS_ADDRESS']);
              this.walletConnected = true;
            }

            // Get the user's wallet address
            const walletAddress = await window.arweaveWallet.getActiveAddress();
            this.walletAddress = walletAddress;

            // Get challenge (nonce) from server
            const challengeResponse = await fetch('/auth/wallet/challenge', {
              credentials: 'include'
            });

            if (!challengeResponse.ok) {
              throw new Error('Failed to get authentication challenge');
            }

            const { nonce, message, nodeWallet } = await challengeResponse.json();

            console.log('Challenge received - Nonce:', nonce.substring(0, 20) + '...');
            console.log('Message to sign:', message);
            console.log('User wallet:', walletAddress);
            console.log('Node wallet:', nodeWallet);

            // Check if user's wallet matches the node wallet
            if (walletAddress !== nodeWallet) {
              this.errorMessage = `Access denied. Only the node wallet (${nodeWallet.substring(0, 8)}...${nodeWallet.substring(nodeWallet.length - 8)}) can login.`;
              this.loading = false;
              this.loginMethod = '';
              return;
            }

            // Create message with nonce (challenge-response)
            const messageWithNonce = `${message}\n\nNonce: ${nonce}`;
            console.log('Full message with nonce:', messageWithNonce);

            // Sign the message with Wander wallet
            const encoder = new TextEncoder();
            const messageData = encoder.encode(messageWithNonce);

            // signMessage() returns an ArrayBuffer
            const signatureArrayBuffer = await window.arweaveWallet.signMessage(messageData);
            console.log('Signature ArrayBuffer length:', signatureArrayBuffer.byteLength);

            // Convert ArrayBuffer to base64url
            const signatureBase64 = this.arrayBufferToBase64Url(signatureArrayBuffer);
            console.log('Signature base64url (first 50 chars):', signatureBase64.substring(0, 50));
            console.log('Signature length:', signatureBase64.length);

            // Send signature to backend for verification
            const loginResponse = await fetch('/auth/wallet/login', {
              method: 'POST',
              credentials: 'include',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                walletAddress,
                signature: signatureBase64,
                nonce
              })
            });

            if (loginResponse.ok) {
              this.successMessage = 'Wallet connected successfully! Redirecting...';
              setTimeout(() => {
                window.location.href = '/admin';
              }, 1000);
            } else {
              const data = await loginResponse.json().catch(() => ({}));
              this.errorMessage = data.message || 'Wallet authentication failed. Please try again.';
            }
          } catch (error) {
            console.error('Wallet connection error:', error);
            if (error.message && error.message.includes('denied')) {
              this.errorMessage = 'Wallet connection was denied. Please approve the connection request.';
            } else if (error.message) {
              this.errorMessage = error.message;
            } else {
              this.errorMessage = 'Failed to connect wallet. Please try again.';
            }
          } finally {
            this.loading = false;
            this.loginMethod = '';
          }
        },

        arrayBufferToBase64Url(buffer) {
          const bytes = new Uint8Array(buffer);
          let binary = '';
          for (let i = 0; i < bytes.length; i++) {
            binary += String.fromCharCode(bytes[i]);
          }
          const base64 = btoa(binary);
          return base64.replace(/\+/g, '-').replace(/\//g, '_').replace(/=/g, '');
        }
      }
    }
