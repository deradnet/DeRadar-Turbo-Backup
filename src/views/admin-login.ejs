  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/lucide-static@latest/font/lucide.css">
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            dark: {
              bg: '#0a0a0b',
              card: '#161618',
              panel: '#111113',
              hover: '#1e1e20',
              border: '#252528',
              text: '#e0e0e0'
            },
            queue: {
              primary: '#60a5fa',
              secondary: '#3b82f6',
              accent: '#93c5fd',
              completed: '#34d399',
              pending: '#fbbf24',
              failed: '#f87171',
              waiting: '#a78bfa',
              slot: '#60a5fa',
              upload: '#10b981'
            }
          },
          fontFamily: {
            sans: ['Inter', 'ui-sans-serif', 'system-ui', 'sans-serif']
          }
        }
      }
    }
  </script>
