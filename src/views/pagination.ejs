<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Archive History</title>
    <style>
        body {
            font-family: sans-serif;
            max-width: 800px;
            margin: auto;
        }

        .record {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
        }

        .pagination a {
            margin: 0 10px;
        }
    </style>
</head>
<body>
<h1>Archive History</h1>

<% results.forEach(function(record) { %>
    <div class="record" style="padding: 10px; border-bottom: 1px solid #ccc;">
        <p><strong>ID:</strong> <%= record.id %></p>
        <p><strong>TxID:</strong> <a href="/archive/<%= record.txId %>"><%= record.txId %></a></p>
        <p><strong>Source:</strong> <%= record.source %></p>
        <p><strong>Timestamp:</strong> <%= record.timestamp %></p>
        <p><strong>Created At:</strong> <%= record.createdAt %></p>
    </div>
<% }) %>


<div class="pagination">
    <% if (previous) { %>
        <a href="<%= previous ;%>">← Previous</a>
    <% } %>
    <% if (next) { %>
        <a href="<%= next ;%>">Next →</a>
    <% } %>
</div>
</body>
</html>
